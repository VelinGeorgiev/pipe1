{
  "name": "node-api",
  "version": "0.0.1",
  "description": "Minimalistic boilerplate to quick-start Node.js API development in TypeScript.",
  "engines": {
    "node": ">= 10.13 <11"
  },
  "main": "main.js",
  "dependencies": {
    "restify": "7.4.0",
    "restify-plugins": "1.6.0",
    "passport": "0.4.0",
    "passport-azure-ad": "4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10",
    "@types/passport": "1.0.0",
    "jest": "~23.6.0",
    "jest-junit": "5.2.0",
    "supertest": "3.3.0",
    "@types/supertest": "2.0.7",
    "prettier": "1.15.3",
    "rimraf": "~2.6.2",
    "ts-jest": "~23.10.5",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-microsoft-contrib": "~6.0.0",
    "sinon": "7.2.2",
    "@types/sinon": "7.0.3",
    "tsutils": "~3.5.2",
    "typescript": "~3.2.1",
    "tslib": "~1.9.3"
  },
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.release.json",
    "watch": "tsc -w -p tsconfig.release.json",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch  --coverage --coverageReporters text",
    "start": "node build/src/main.js"
  },
  "author": "Velin Georgiev <github@velingeorgiev.info>",
  "license": "Apache-2.0",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testMatch": [
      "**/src/**/*.test.+(ts|tsx)"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "cobertura"
    ],
    "coverageDirectory": "coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "suiteName": "jest tests"
        }
      ]
    ]
  },
  "jest-junit": {
    "output": "./coverage/summary-jest-junit.xml"
  }
}
